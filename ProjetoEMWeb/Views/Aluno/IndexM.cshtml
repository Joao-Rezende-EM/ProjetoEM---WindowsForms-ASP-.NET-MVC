@model EM.Domain.Aluno

@{
    ViewData["Title"] = "IndexM";
}

<h1 style="text-align:center">Cadastro de Alunos
    <a asp-action="Add"class="btn btn-dark"  style="float:right; background:#198754">Adicionar Novo</a>
</h1>

<br>
<br>

<form asp-action="index" mmethod="get">
<div class="input-group">
<input type="text" name="MatriculaOuNomeAluno"class="form-control" placeholder="Digite o nome do aluno(a)" style="margin-right:5px" id="busca">
<button type="submit" style="background:#198754" class="btn btn-dark">Buscar</button>
<button type="submit" name="Limpar"style="margin-left:5px" class="btn btn-dark" value="">Limpar Filtro</button>
</div>
</form>

<br>

<table id="myTable" class="table table-striped" >
    <thead class= "thead" style="background:#000; color:white;">
        <tr >
            <th width="10px" style="border-right:inset">
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th style="text-align:center; border-right:inset"  width="00px">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align:center; border-right:inset" width="10px">
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th style="text-align:center; border-right:inset" width="10px">
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th style="text-align:center; border-right:inset" width="140px">
                @Html.DisplayNameFor(model => model.CPF )
            </th>
            <th style="text-align:center" width="170px">
                Opções
            </th>
        </tr>
    </thead>
    <tbody>

    <tbody>
        
        <tr>
            <td>
               @Html.DisplayFor(model => model.Matricula)
                </td>
            <td>
                @Html.DisplayFor(model => model.Nome)
            </td>
            <td>
                @Html.DisplayFor(model => model.Sexo)
            </td>
            <td>
                @Html.DisplayFor(model => model.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(model => model.CPF)
            </td>
             <td style="border-right:inset">
                <a asp-action="Update" class="btn btn-success" style="background:#198754" asp-route-id="@Model.Matricula">Editar</a>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter-@Model.Matricula">Excluir</button>

            <div class="modal fade" id="exampleModalCenter-@Model.Matricula" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Excluir aluno</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Deseja realmente excluir o aluno @Model.Nome ?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="Model.Matricula">Excluir</a>
                  </div>
                </div>
              </div>
            </div>
                       </td>
        </tr>

    </tbody>
</table>
