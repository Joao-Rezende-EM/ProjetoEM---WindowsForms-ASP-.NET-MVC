@using ProjetoEMWeb.Models.EM.Domain
@using ProjetoEMWeb.Models.EM.Repository
@model IEnumerable<ProjetoEMWeb.Models.EM.Domain.Aluno>



@{
    ViewData["Title"] = "Cadastro de Aluno";
}

<h1 style="text-align:center">Cadastro de Alunos
    <a asp-action="Add"class="btn btn-dark"  style="float:right; background:#198754">Adicionar Novo</a>
</h1>

<br>
<br>

<form action ="" method="post">
<div class="input-group">
  <input  type="search" class="form-control" placeholder="Digite a matrícula ou o nome do aluno" style="margin-right:5px" name="busca" id="busca">
  <button type="button" style="background:#198754" class="btn btn-dark">Buscar</button>
</div>
</form>

<br>

<table id="myTable" class="table table-striped" >
    <thead class= "thead" style="background:#000; color:white;">
        <tr >
            <th width="10px" style="border-right:inset">
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th style="text-align:center; border-right:inset"  width="00px">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align:center; border-right:inset" width="10px">
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th style="text-align:center; border-right:inset" width="10px">
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th style="text-align:center; border-right:inset" width="140px">
                @Html.DisplayNameFor(model => model.CPF )
            </th>
            <th style="text-align:center" width="170px">
                Opções
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="border:inset">
            <th scope="row" style="text-align:center; border-right:inset">
                @Html.DisplayFor(modelItem => item.Matricula)
            </th>
            <td style="border-right:inset">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td style="text-align:center; border-right:inset">
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td style="text-align:center; border-right:inset">
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td style="text-align:center; border-right:inset">
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td style="border-right:inset">
                <a asp-action="Update" class="btn btn-success" style="background:#198754" asp-route-id="@item.Matricula">Editar</a>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter-@item.Matricula">Excluir</button>

            <div class="modal fade" id="exampleModalCenter-@item.Matricula" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Excluir aluno</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Deseja realmente excluir o aluno @item.Nome ?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Matricula">Excluir</a>
                  </div>
                </div>
              </div>
            </div>
                       </td>
                    </tr>
            }
                </tbody>
            </table>

            
